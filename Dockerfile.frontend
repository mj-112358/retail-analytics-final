# Frontend Dockerfile for local development
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY "project 5/package*.json" ./
RUN npm install

# Copy source code
COPY "project 5/" .

# Build the app
RUN npm run build

# Use nginx to serve the built app
FROM nginx:alpine
COPY --from=0 /app/dist /usr/share/nginx/html

# Copy nginx configuration
COPY "project 5/nginx.frontend.conf" /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]